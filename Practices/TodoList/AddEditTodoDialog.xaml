    <Label Content="Id" HorizontalAlignment="Left" Margin="47,39,0,0" VerticalAlignment="Top" />
    <Label Content="Task" HorizontalAlignment="Left" Margin="47,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.48,0.41" />

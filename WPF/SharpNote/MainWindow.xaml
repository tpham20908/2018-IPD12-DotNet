<Window x:Class="SharpNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpNote"
        mc:Ignorable="d"
        Title="MainWindow" Height="351.133" Width="416.262" ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="Salmon">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuFileOpen_Click" />
                <MenuItem Header="_Save as" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Background="Salmon">
            <StatusBarItem>
                <TextBlock Name="tbStatus" Text="No file" TextWrapping="Wrap"/>
            </StatusBarItem>
        </StatusBar>

        <TextBlock Name="tbDocument" Background="AliceBlue" ></TextBlock>
    </DockPanel>
    
</Window>
